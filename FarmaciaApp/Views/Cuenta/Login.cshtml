@model FarmaciaApp.Models.Usuarios

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Iniciar sesión</h2>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" type="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="passwordHash" class="form-label">Contraseña</label>
            <input name="passwordHash" type="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Ingresar</button>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @ViewBag.Mensaje
            </div>
        }
    </form>

    <div class="text-center mt-3">
        <a asp-controller="Cuenta" asp-action="Registro">¿No tenés cuenta? Registrate</a>
    </div>
</div>

